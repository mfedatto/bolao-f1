{
    "compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"lib": [
			"ES2018"
		],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
		"sourceMap": true,
		"outDir": "dist/js"
    },
    "include": [
        "ts/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}